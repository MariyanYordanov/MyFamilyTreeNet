@{
    ViewData["Title"] = "Управление на потребители";
    var users = ViewBag.Users as List<object>;
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var searchTerm = ViewBag.SearchTerm as string ?? "";
    var totalCount = ViewBag.TotalCount ?? 0;
}

<!-- Header with Search -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">Управление на потребители</h4>
        <small class="text-muted">Общо @totalCount потребители</small>
    </div>
    <div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Обратно към Dashboard
        </a>
    </div>
</div>

<!-- Search and Filters -->
<div class="stat-card p-3 mb-4">
    <form method="get" asp-action="Index">
        <div class="row align-items-end">
            <div class="col-md-8">
                <label for="search" class="form-label">Търсене</label>
                <input type="text" class="form-control" id="search" name="search" 
                       value="@searchTerm" placeholder="Търсене по име, фамилия или email...">
            </div>
            <div class="col-md-4">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>
                        Търси
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>
                        Изчисти
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Users Table -->
<div class="stat-card">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="bg-light">
                <tr>
                    <th>Потребител</th>
                    <th>Email</th>
                    <th>Роли</th>
                    <th>Семейства</th>
                    <th>Създаден</th>
                    <th>Последен вход</th>
                    <th width="150">Действия</th>
                </tr>
            </thead>
            <tbody>
                @if (users?.Any() == true)
                {
                    @foreach (dynamic userInfo in users)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-primary text-white text-center me-3" 
                                         style="width: 40px; height: 40px; line-height: 40px;">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">@($"{userInfo.User.FirstName} {userInfo.User.MiddleName} {userInfo.User.LastName}")</h6>
                                        <small class="text-muted">@userInfo.User.UserName</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @userInfo.User.Email
                                @if (userInfo.User.EmailConfirmed)
                                {
                                    <i class="fas fa-check-circle text-success ms-1" title="Потвърден email"></i>
                                }
                                else
                                {
                                    <i class="fas fa-exclamation-circle text-warning ms-1" title="Непотвърден email"></i>
                                }
                                @if (userInfo.IsLocked)
                                {
                                    <span class="badge bg-danger ms-1">Блокиран</span>
                                }
                            </td>
                            <td>
                                @if (userInfo.Roles.Any())
                                {
                                    @foreach (string role in userInfo.Roles)
                                    {
                                        <span class="badge bg-@(role == "Admin" ? "danger" : "primary") me-1">@role</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-secondary">User</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info">@userInfo.FamilyCount</span>
                            </td>
                            <td>
                                <small>@userInfo.User.CreatedAt.ToString("dd.MM.yyyy")</small>
                            </td>
                            <td>
                                @if (userInfo.User.LastLoginAt != null)
                                {
                                    <small>@userInfo.User.LastLoginAt.Value.ToString("dd.MM.yyyy HH:mm")</small>
                                }
                                else
                                {
                                    <small class="text-muted">Никога</small>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@userInfo.User.Id" 
                                       class="btn btn-sm btn-outline-primary" title="Детайли">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (!userInfo.Roles.Contains("Admin"))
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                data-bs-toggle="modal" data-bs-target="#deleteModal" 
                                                data-user-id="@userInfo.User.Id" 
                                                data-user-name="@($"{userInfo.User.FirstName} {userInfo.User.LastName}")"
                                                title="Изтрий">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center py-4">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <p class="text-muted">
                                @if (!string.IsNullOrEmpty(searchTerm))
                                {
                                    <span>Няма намерени потребители за "@searchTerm"</span>
                                }
                                else
                                {
                                    <span>Няма потребители</span>
                                }
                            </p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <div class="d-flex justify-content-center mt-3 p-3">
            <nav>
                <ul class="pagination">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-search="@searchTerm">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                    
                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@searchTerm">@i</a>
                        </li>
                    }
                    
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-search="@searchTerm">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Потвърждение за изтриване</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Сигурни ли сте, че искате да изтриете потребител <strong id="userNameToDelete"></strong>?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Това действие е необратимо!
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отказ</button>
                <form id="deleteForm" method="post" asp-action="Delete" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="userIdToDelete" name="userId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>
                        Изтрий
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Delete modal handling
        document.addEventListener('DOMContentLoaded', function() {
            const deleteModal = document.getElementById('deleteModal');
            deleteModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const userId = button.getAttribute('data-user-id');
                const userName = button.getAttribute('data-user-name');
                
                document.getElementById('userIdToDelete').value = userId;
                document.getElementById('userNameToDelete').textContent = userName;
            });
        });
    </script>
}