@model MyFamilyTreeNet.Data.Models.Story
@{
    ViewData["Title"] = "Добави история";
    var familyName = ViewBag.FamilyName as string ?? "";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-book me-2"></i>Добави история за семейство @familyName</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <input asp-for="FamilyId" type="hidden" />
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Заглавие</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">Съдържание</label>
                            <textarea asp-for="Content" class="form-control" rows="8" placeholder="Напишете историята тук..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsPublic" class="form-check-input" type="checkbox" />
                                <label asp-for="IsPublic" class="form-check-label">
                                    Публична история (видима за всички)
                                </label>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Запази
                            </button>
                            <a asp-controller="FamilyMvc" asp-action="Details" asp-route-id="@Model.FamilyId" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Назад
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>