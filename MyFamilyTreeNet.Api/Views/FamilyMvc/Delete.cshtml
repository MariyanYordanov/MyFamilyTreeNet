@model MyFamilyTreeNet.Data.Models.Family
@{
    ViewData["Title"] = "Изтриване на семейство";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Изтриване на семейство
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-danger"><strong>Внимание!</strong> Сигурни ли сте, че искате да изтриете това семейство?</p>
                    
                    <h6>@Model.Name</h6>
                    @if (!string.IsNullOrWhiteSpace(Model.Description))
                    {
                        <p class="text-muted">@Model.Description</p>
                    }
                    
                    <div class="alert alert-warning">
                        <p class="mb-0">Това действие ще изтрие напълно семейството и не може да бъде отменено.</p>
                    </div>

                    @if (ViewBag.HasMembers == true)
                    {
                        <div class="alert alert-danger">
                            <h6><i class="fas fa-exclamation-triangle me-2"></i>Това семейство има членове!</h6>
                            <p>Семейството има <strong>@ViewBag.MemberCount</strong> членове и техните данни (включително всички семейни връзки) също ще бъдат изтрити.</p>
                            <p class="mb-0">Сигурни ли сте, че искате да продължите?</p>
                        </div>
                    }
                    
                    <form asp-action="Delete" method="post">
                        <input asp-for="Id" type="hidden" />
                        @if (ViewBag.HasMembers == true)
                        {
                            <input name="deleteAll" type="hidden" value="true" />
                        }
                        <div class="d-flex gap-2">
                            @if (ViewBag.HasMembers == true)
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-1"></i>Да, изтрий всичко
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-1"></i>Да, изтрий
                                </button>
                            }
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i>Отказ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>