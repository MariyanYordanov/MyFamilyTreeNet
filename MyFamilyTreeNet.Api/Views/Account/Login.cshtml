@model LoginViewModel
@{
    ViewData["Title"] = "Вход";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center">
                <h4><i class="fas fa-sign-in-alt me-2"></i>Вход</h4>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email адрес</label>
                        <input asp-for="Email" class="form-control" placeholder="admin@worldfamily.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Парола</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Admin123" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">
                            Запомни ме
                        </label>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-1"></i>Влез
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center bg-light">
                <small class="text-muted">
                    Нямаш акаунт? <a asp-action="Register" class="text-decoration-none">Регистрирай се</a>
                </small>
            </div>
        </div>
        
        <div class="mt-3 text-center">
            <small class="text-muted">
                <strong>За тестване:</strong><br>
                Email: admin@worldfamily.com<br>
                Парола: Admin123
            </small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}