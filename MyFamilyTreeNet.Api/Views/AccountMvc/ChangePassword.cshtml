@model MyFamilyTreeNet.Api.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Смяна на парола";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>
                        <i class="fas fa-key me-2"></i>Смяна на парола
                    </h2>
                    <p class="text-muted mb-0">Променете паролата за вашия акаунт</p>
                </div>
                <a class="btn btn-outline-secondary" asp-action="Profile">
                    <i class="fas fa-arrow-left me-1"></i>Назад
                </a>
            </div>

            <!-- Form -->
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>Нова парола
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <!-- Current Password -->
                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label">
                                <i class="fas fa-lock me-1"></i>Текуща парола <span class="text-danger">*</span>
                            </label>
                            <input asp-for="CurrentPassword" class="form-control" placeholder="Въведете текущата парола" autocomplete="current-password" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <!-- New Password -->
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">
                                <i class="fas fa-key me-1"></i>Нова парола <span class="text-danger">*</span>
                            </label>
                            <input asp-for="NewPassword" class="form-control" placeholder="Въведете нова парола" autocomplete="new-password" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <div class="form-text">
                                Паролата трябва да бъде поне 6 символа.
                            </div>
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-check-circle me-1"></i>Потвърдете новата парола <span class="text-danger">*</span>
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Повторете новата парола" autocomplete="new-password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Променете паролата
                            </button>
                            <a class="btn btn-outline-secondary" asp-action="Profile">
                                <i class="fas fa-times me-1"></i>Отказ
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Security Tips -->
            <div class="mt-4">
                <div class="card bg-light">
                    <div class="card-body">
                        <h6><i class="fas fa-lightbulb me-2"></i>Съвети за сигурност</h6>
                        <ul class="mb-0 small">
                            <li>Използвайте силна парола с букви, цифри и специални символи</li>
                            <li>Не споделяйте паролата си с други хора</li>
                            <li>Сменяйте паролата редовно за по-добра сигурност</li>
                            <li>Не използвайте същата парола за различни услуги</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}