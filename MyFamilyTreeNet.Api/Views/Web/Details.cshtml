@model MyFamilyTreeNet.Api.DTOs.FamilyDto

@{
    ViewData["Title"] = $"Семейство {Model.Name}";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h1 class="h3 mb-0">
                        <i class="fas fa-users me-2"></i>
                        @Model.Name
                    </h1>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="text-secondary">
                            <i class="fas fa-info-circle me-2"></i>
                            Описание
                        </h5>
                        <p class="lead">@(Model.Description ?? "Няма добавено описание за това семейство.")</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-calendar-alt text-primary me-2"></i>
                                <div>
                                    <small class="text-muted">Създадено на</small>
                                    <div>@Model.CreatedAt.ToString("dd MMMM yyyy г.")</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-user text-primary me-2"></i>
                                <div>
                                    <small class="text-muted">Създател</small>
                                    <div>@Model.CreatedByUserId</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="mb-4">
                        <h5 class="text-secondary mb-3">
                            <i class="fas fa-chart-line me-2"></i>
                            Статистика
                        </h5>
                        <div class="row text-center">
                            <div class="col-md-4 mb-3">
                                <div class="bg-light rounded p-3">
                                    <i class="fas fa-user-friends fa-2x text-primary mb-2"></i>
                                    <h3 class="mb-1">@Model.MemberCount</h3>
                                    <small class="text-muted">Членове</small>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="bg-light rounded p-3">
                                    <i class="fas fa-camera fa-2x text-info mb-2"></i>
                                    <h3 class="mb-1">@Model.PhotoCount</h3>
                                    <small class="text-muted">Снимки</small>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="bg-light rounded p-3">
                                    <i class="fas fa-book fa-2x text-success mb-2"></i>
                                    <h3 class="mb-1">@Model.StoryCount</h3>
                                    <small class="text-muted">Истории</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-controller="FamilyMvc" asp-action="Tree" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="fas fa-sitemap me-2"></i>
                            Родословно дърво
                        </a>
                        <a asp-controller="FamilyMvc" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Обратно към списъка
                        </a>
                    </div>
                </div>
            </div>

            @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || Model?.CreatedByUserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value))
            {
                <div class="card mt-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-cogs me-2"></i>
                            Администрация
                        </h5>
                        <div class="btn-group" role="group">
                            <a href="#" class="btn btn-warning">
                                <i class="fas fa-edit me-2"></i>
                                Редактирай
                            </a>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="fas fa-trash me-2"></i>
                                Изтрий
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Потвърждение за изтриване</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Сигурни ли сте, че искате да изтриете семейство "@(Model?.Name)"?</p>
                <p class="text-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Това действие е необратимо!
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отказ</button>
                <form asp-controller="FamilyMvc" asp-action="Delete" asp-route-id="@(Model?.Id)" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>
                        Изтрий
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

