@model IEnumerable<MyFamilyTreeNet.Data.Models.Family>
@{
    ViewData["Title"] = "Семейства - MyFamilyTreeNet";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary">
        <i class="fas fa-users me-2"></i>Семейства
    </h1>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <a asp-area="" asp-controller="FamilyMvc" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Създай семейство
        </a>
    }
</div>

<!-- Search Bar -->
<div class="row mb-4">
    <div class="col-md-6">
        <form method="get" class="d-flex">
            <input type="text" name="search" value="@ViewBag.SearchTerm" class="form-control me-2" 
                   placeholder="Търсене в семейства...">
            <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>
    <div class="col-md-6 text-md-end">
        <small class="text-muted">
            Намерени: @ViewBag.TotalCount семейства
        </small>
    </div>
</div>

<!-- Families Grid -->
@if (ViewBag.Families != null && ((List<MyFamilyTreeNet.Data.Models.Family>)ViewBag.Families).Any())
{
    <div class="row g-4 mb-4">
        @foreach (var family in (List<MyFamilyTreeNet.Data.Models.Family>)ViewBag.Families)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm family-card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-home me-2"></i>@family.Name
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted small mb-2">
                            <i class="fas fa-calendar me-1"></i>
                            Създадено @family.CreatedAt.ToString("dd.MM.yyyy")
                        </p>
                        <p class="card-text">
                            @if (!string.IsNullOrEmpty(family.Description))
                            {
                                @(family.Description.Length > 120 ? family.Description.Substring(0, 120) + "..." : family.Description)
                            }
                            else
                            {
                                <em>Няма описание</em>
                            }
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="fas fa-users me-1"></i>0 членове
                            </small>
                            <span class="badge bg-success">
                                <i class="fas fa-globe me-1"></i>Публично
                            </span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex gap-2">
                            <a asp-area="" asp-controller="FamilyMvc" asp-action="Details" asp-route-id="@family.Id" 
                               class="btn btn-outline-primary btn-sm flex-fill">
                                <i class="fas fa-eye me-1"></i>Детайли
                            </a>
                            <a asp-area="" asp-controller="FamilyMvc" asp-action="Tree" asp-route-id="@family.Id" 
                               class="btn btn-outline-success btn-sm flex-fill">
                                <i class="fas fa-sitemap me-1"></i>Дърво
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Семейства навигация">
            <ul class="pagination justify-content-center">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-search="@ViewBag.SearchTerm">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
                
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" asp-route-page="@i" asp-route-search="@ViewBag.SearchTerm">@i</a>
                    </li>
                }
                
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-search="@ViewBag.SearchTerm">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <!-- Empty State -->
    <div class="text-center py-5">
        <i class="fas fa-users fa-4x text-muted mb-3"></i>
        <h3 class="text-muted">Няма намерени семейства</h3>
        @if (string.IsNullOrEmpty(ViewBag.SearchTerm as string))
        {
            <p class="text-muted mb-4">Станете първия, който ще създаде семейство!</p>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-area="" asp-controller="FamilyMvc" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Създайте първото семейство
                </a>
            }
        }
        else
        {
            <p class="text-muted mb-4">Опитайте с различни ключови думи или премахнете филтрите.</p>
            <a asp-area="" asp-controller="FamilyMvc" asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-refresh me-2"></i>Виж всички семейства
            </a>
        }
    </div>
}