<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyFamilyTreeNet</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-fallback-href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
          asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute">
    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" asp-fallback-href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          asp-fallback-test-class="fa" asp-fallback-test-property="font-family" asp-fallback-test-value="Font Awesome 6 Free">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
    
    <meta name="description" content="MyFamilyTreeNet - Създайте и споделете вашата семейна история">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-tree me-2"></i>
                    <strong>MyFamilyTreeNet</strong>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Начало
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Web" asp-action="Index">
                                <i class="fas fa-users me-1"></i>Семейства
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="fas fa-info-circle me-1"></i>За нас
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">
                                <i class="fas fa-envelope me-1"></i>Контакти
                            </a>
                        </li>
                    </ul>
                    
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-2"></i>
                                    <span class="d-none d-md-inline">@(User.Identity?.Name ?? "User")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt me-2"></i>Моят профил
                                    </a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="FamilyMvc" asp-action="Create">
                                        <i class="fas fa-plus me-2"></i>Създай семейство
                                    </a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                            <i class="fas fa-cog me-2"></i>Администрация
                                        </a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item" style="cursor: pointer;">
                                                <i class="fas fa-sign-out-alt me-2"></i>Изход
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <div class="d-flex gap-2">
                                <a class="btn btn-outline-primary" href="/login">
                                    Влез
                                </a>
                                <a class="btn btn-primary" href="/register">
                                    Регистрация
                                </a>
                            </div>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container" style="margin-top: 80px; min-height: calc(100vh - 200px);">
        <!-- Alert Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="fas fa-info-circle me-2"></i>@TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-tree me-2"></i>MyFamilyTreeNet</h5>
                    <p class="mb-0">Свържете се с вашето семейство и открийте вашата история.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">&copy; @DateTime.Now.Year MyFamilyTreeNet. Всички права запазени.</p>
                    <div class="mt-2">
                        <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none me-3">Поверителност</a>
                        <a asp-area="" asp-controller="Home" asp-action="Help" class="text-light text-decoration-none">Помощ</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>